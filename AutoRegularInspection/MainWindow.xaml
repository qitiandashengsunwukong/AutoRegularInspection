<Window x:Class="AutoRegularInspection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>
        <TabControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <TabItem Header="桥面系">
                <StackPanel>
                    <DataGrid  Name="gridTotal" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="30"
                                Binding="{Binding No}"
                                Header="序号" />
                                        <DataGridTextColumn
                                Width="Auto"
                                MinWidth="50"
                                Binding="{Binding Position}"
                                Header="位置" />
                                        <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Component}"
                                Header="构件类型" />
                                        <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Damage}"
                                Header="损坏类型" />
                                        <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Damage}"
                                Header="损坏类型" />
                                        <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescription}"
                                Header="病害描述" />
                                        <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PictureNo}"
                                Header="照片编号" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="上部结构">
                <StackPanel>
                    <DataGrid  Name="gridTotal1" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="30"
                                Binding="{Binding No}"
                                Header="序号" />
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="50"
                                Binding="{Binding Position}"
                                Header="位置" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Component}"
                                Header="构件类型" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Damage}"
                                Header="损坏类型" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Damage}"
                                Header="损坏类型" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescription}"
                                Header="病害描述" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PictureNo}"
                                Header="照片编号" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
            <TabItem Header="下部结构">
                <StackPanel>
                    <DataGrid  Name="gridTotal2" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="30"
                                Binding="{Binding No}"
                                Header="序号" />
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="50"
                                Binding="{Binding Position}"
                                Header="位置" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Component}"
                                Header="构件类型" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Damage}"
                                Header="损坏类型" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Damage}"
                                Header="损坏类型" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescription}"
                                Header="病害描述" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PictureNo}"
                                Header="照片编号" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

        </TabControl>

        <!--<DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="50"
                    Binding="{Binding Id}"
                    Header="Id" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Name}"
                    Header="名称" />
  
            </DataGrid.Columns>-->

        <Button Grid.Row="1" Grid.Column="0" Margin="10" Click="CheckForUpdateButton_Click">检查更新</Button>
        <Button Grid.Row="1" Grid.Column="1" Margin="10" Click="InstructionsButton_Click">使用说明</Button>
        <Button Grid.Row="1" Grid.Column="2" Margin="10" Click="DisclaimerButton_Click">免责声明</Button>
    </Grid>
</Window>
