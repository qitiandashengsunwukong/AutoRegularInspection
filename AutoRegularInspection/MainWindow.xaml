<Window x:Class="AutoRegularInspection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:core="clr-namespace:System;assembly=mscorlib" 
        xmlns:local="clr-namespace:AutoRegularInspection.Models"
        mc:Ignorable="d"
        Title="外观检查自动报告" Height="450" Width="1000">
    <Window.Resources>
        <local:EnumConverter x:Key="eConverter"/>
    </Window.Resources>
    
    <Grid>

        <Grid.Resources>
            <ObjectDataProvider x:Key="myEnum" MethodName="GetValues" ObjectType="{x:Type core:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type Type="local:BridgeDeckEnum"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            
            
            
            <Style TargetType="{x:Type DataGridCell}">
                <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DataGridCell_PreviewMouseLeftButtonDown" />
                <EventSetter Event="PreviewTextInput" Handler="DataGridCell_PreviewTextInput" />
            </Style>

            <sys:Int32 x:Key="ColumnCounts">5</sys:Int32>
            <sys:Int32 x:Key="TabControlRowIndex">1</sys:Int32>
            <sys:Int32 x:Key="OperationButtonRowIndex">2</sys:Int32>
            <sys:Int32 x:Key="CommonButtonRowIndex">3</sys:Int32>
            <sys:Int32 x:Key="CopyRightRowIndex">4</sys:Int32>
            <sys:Int32 x:Key="StatusBarRowIndex">5</sys:Int32>
            <GridLength x:Key="OperationButtonRowHeight">50</GridLength>
            <GridLength x:Key="CommonButtonRowHeight">50</GridLength>
            <GridLength x:Key="CopyRightRowHeight">30</GridLength>
            <GridLength x:Key="StatusBarRowHeight">30</GridLength>

            <!--Create list of enumeration values-->

            <!--Create an instance of the converter for Email-->
            <!--<local:EmailConverter x:Key="EmailConverter" />-->
            <!--<ObjectDataProvider x:Key="myComboBox" MethodName="GetValues" ObjectType="{x:Type core:Object}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type Type="local:BridgeDeck"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>-->
            
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="{StaticResource OperationButtonRowHeight}"></RowDefinition>
            <RowDefinition Height="{StaticResource CommonButtonRowHeight}"></RowDefinition>
            <RowDefinition Height="{StaticResource CopyRightRowHeight}"></RowDefinition>
            <RowDefinition Height="{StaticResource StatusBarRowHeight}"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="{StaticResource ColumnCounts}">
            <!-- 参考 https://www.cnblogs.com/lk-kk/p/4609026.html-->
            <MenuItem Header="文件">
                <MenuItem Header="退出" Click="MenuItem_Exit_Click" ></MenuItem>
            </MenuItem>
            <MenuItem Header="工具">
                <MenuItem Header="选项" Click="MenuItem_Option_Click" ></MenuItem>
            </MenuItem>
            <MenuItem Header="帮助">
                <MenuItem Header="查看源代码" Click="MenuItem_ViewSourceCode_Click" ></MenuItem>
                <MenuItem Header="关于" Click="MenuItem_About_Click" ></MenuItem>
            </MenuItem>
        </Menu>
        <TabControl Grid.Row="{StaticResource TabControlRowIndex}" Grid.Column="0" Grid.ColumnSpan="{StaticResource ColumnCounts}">
            <TabItem Header="桥面系">
                <Grid>
                    <DataGrid  Name="BridgeDeckGrid" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="30"
                                Binding="{Binding No}"
                                Header="序号" />
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="50"
                                Binding="{Binding Position}"
                                Header="位置" />

                            <DataGridComboBoxColumn
                                Header="要素（枚举）"
                                SelectedItemBinding="{Binding TestEnum}"
                                ItemsSource="{Binding Source={StaticResource myEnum},Converter={StaticResource eConverter}}"
                                />


                            <DataGridTemplateColumn Header="ComboBox" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox 
                                            ItemsSource="{Binding TestComboBox}"
                                            DisplayMemberPath="Title"
                                            SelectedIndex="{Binding TestValue,Mode=OneTime}"
                                            />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Component}"
                                Header="要素" />

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Damage}"
                                Header="缺损类型" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescription}"
                                Header="缺损描述" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescriptionInPicture}"
                                Header="缺损对应图片描述" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PictureNo}"
                                Header="照片编号" />
                            <DataGridTemplateColumn Width="50" Header="照片预览">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding PicturePreview}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="上部结构">
                <Grid>
                    <DataGrid  Name="SuperSpaceGrid" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="30"
                                Binding="{Binding No}"
                                Header="序号" />
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="50"
                                Binding="{Binding Position}"
                                Header="位置" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Component}"
                                Header="构件类型" />

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Damage}"
                                Header="缺损类型" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescription}"
                                Header="缺损描述" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescriptionInPicture}"
                                Header="缺损对应图片描述" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PictureNo}"
                                Header="照片编号" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PicturePreview}"
                                Header="照片预览" />

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="下部结构">
                <Grid>
                    <DataGrid  Name="SubSpaceGrid" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="30"
                                Binding="{Binding No}"
                                Header="序号" />
                            <DataGridTextColumn
                                Width="Auto"
                                MinWidth="50"
                                Binding="{Binding Position}"
                                Header="位置" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Component}"
                                Header="构件类型" />

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Damage}"
                                Header="缺损类型" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescription}"
                                Header="缺损描述" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding DamageDescriptionInPicture}"
                                Header="缺损对应图片描述" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding PictureNo}"
                                Header="照片编号" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>

        <Button Grid.Row="{StaticResource OperationButtonRowIndex}" Grid.Column="0" Margin="10" Click="BackupExcel_Click">备份Excel</Button>
        <Button Grid.Row="{StaticResource OperationButtonRowIndex}" Grid.Column="1" Margin="10" Click="SaveExcel_Click">保存到Excel</Button>
        
        <Button Grid.Row="{StaticResource CommonButtonRowIndex}" Grid.Column="0" Margin="10" Click="AutoReport_Click">自动生成报告</Button>
        <Button Grid.Row="{StaticResource CommonButtonRowIndex}" Grid.Column="1" Margin="10" Click="SuggestionButton_Click">查看参考建议</Button>
        <Button Grid.Row="{StaticResource CommonButtonRowIndex}" Grid.Column="2" Margin="10" Click="InstructionsButton_Click">使用说明</Button>
        <Button Grid.Row="{StaticResource CommonButtonRowIndex}" Grid.Column="3" Margin="10" Click="CheckForUpdateButton_Click">检查更新</Button>
        <Button Grid.Row="{StaticResource CommonButtonRowIndex}" Grid.Column="4" Margin="10" Click="DisclaimerButton_Click">免责声明</Button>
        <Label Grid.Row="{StaticResource CopyRightRowIndex}" Grid.Column="0" Grid.ColumnSpan="{StaticResource ColumnCounts}" Content="Copyright © 福建省建筑科学研究院 福建省建筑工程质量检测中心有限公司 2020" VerticalAlignment="Center"/>
        <StatusBar  Grid.Row="{StaticResource StatusBarRowIndex}" Grid.Column="0" Grid.ColumnSpan="{StaticResource ColumnCounts}">
            <StatusBarItem>
                <TextBlock Name="StatusBarText" Text="就绪"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
